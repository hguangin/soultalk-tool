{
    "_version": "1.0",
    "_description": "字幕計算規則 - 從 V7.6.8 提取的寫死邏輯",
    "_lastModified": "2025-12-05T00:00:00Z",
    
    "timing": {
        "charEstimateTime": 0.35,
        "bufferTime": 2.0,
        "maxDuration": 12.0,
        "mvGapThreshold": 0.8,
        "audioGapThreshold": 1.5,
        "lastCharExtend": 1.0,
        "syncOffset": 0
    },
    
    "lineBreaking": {
        "mv": {
            "minChars": 6,
            "maxChars": 20
        },
        "audio": {
            "minChars": 5,
            "maxChars": 12
        },
        "preferSentenceEnd": true,
        "breakOnPunctuation": ["。", "！", "？", "，", "、", "；"]
    },
    
    "punctuation": {
        "enabled": true,
        "filter": "，。！？；：、,.!?;:'\"「」『』（）()【】《》〈〉…—～",
        "removeAtLineEnd": true,
        "keepInMiddle": true
    },
    
    "imageTimeline": {
        "openingTime": 3.0,
        "titleFadeOutTime": 12.0,
        "lastWordExtend": 0.5,
        "finalLineExtend": 1.0
    },
    
    "retry": {
        "maxAttempts": 3,
        "delayMs": 2000,
        "timeoutMs": 60000
    },
    
    "longAudio": {
        "threshold": 600,
        "recommendedModel": "gemini-2.0-flash-exp",
        "warningMessage": "音頻超過10分鐘，建議使用 Gemini 2.0 Flash"
    }
}
